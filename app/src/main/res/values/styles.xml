<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RedText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorRedPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textSizePrimary</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AddTextInput" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/lightishBlue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/addInputEditText</item>
        <item name="android:layout_marginStart">@dimen/textMarginHorizontal</item>
        <item name="android:layout_marginEnd">@dimen/textMarginHorizontal</item>
        <item name="android:layout_marginTop">@dimen/textMarginTop</item>
    </style>
    <style name="AddButton">
        <item name="android:enabled">false</item>
        <item name="android:paddingStart">@dimen/buttonPaddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/buttonPaddingHorizontal</item>
        <item name="android:drawablePadding">@dimen/buttonDrawablePadding</item>
        <item name="android:drawableStart">@drawable/ic_check</item>
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">@dimen/buttonMarginTop</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/add_btn</item>
    </style>

    <style name="AppTheme.AppBarOverlay">

    </style>

    <style name="AppTheme.PopupOverlay">

    </style>
</resources>
